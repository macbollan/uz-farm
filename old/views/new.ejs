        <div class="container mt-4">    
            <div class="row">
              <div class="col">
              </div>
              <div class="col-12 col-sm-12 col-lg-9">
                <div class="card shadow border-0">          
                  <div class="card-body">
                    <h1 class="text-center">Create A New Post</h1>
                    <p>
                      <small class="text-muted">Fields marked * are required. Strictly upload one image at a time on this form</small>
                    </p>
                    <form action="/blogs" method="POST" enctype="multipart/form-data" class="needs-validation" >
                      <div class="form-group">
                        <label for="">Name*</label>
                        <input type="text" class="form-control" name="name" placeholder="tittle" required>
                        <div class="invalid-feedback">
                          Please provide a blog tittle.
                        </div>
                      </div>
                     
                      <label class="form-label" for="customFile">Upload an image</label>
                      <input type="file" name="image" class="form-control" id="customFile" required />
                     
                      <div class="form-group">
                        <label for="exampleFormControlTextarea1">Description*</label>
                        <textarea class="form-control" id="exampleFormControlTextarea1" name="description" rows="3" required></textarea>
                      </div>
                     
                      <button type="submit" class="btn btn-info btn-block">Submit</button>
                    </form> <br>
                    <a class="btn  btn-info" href="/blogs">Go Back</a>
                    <a href="/upload" class="btn text-dark btn-md btn-success">Upload a video instead </a>
                  </div>
        
                </div>
        
              </div>
              <div class="col">
        
              </div>
            </div>
        
          </div>


          
